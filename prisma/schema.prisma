generator client {
  provider = "prisma-client-js"
}

model User {
  id                    String   @id @default(uuid())
  firstname             String
  lastname              String
  sex                   String
  currentHeight         Int      @map("current_height") @db.SmallInt()
  heights               Height[]
  currentWeight         Int      @map("current_weight") @db.SmallInt()
  weights               Weight[]
  physicalActivityLevel String   @map("physical_activity_level")
  weightGoal            Int      @map("weight_goal") @db.SmallInt()
  birthdate             DateTime @db.Timestamp()
  email                 String   @unique
  passwordHash          String   @map("password_hash")

  createdAt DateTime @default(now()) @map("created_at")

  @@map("users")
}

model Height {
  id    String   @id @default(uuid())
  value Int      @db.SmallInt()
  date  DateTime @default(now())

  User   User   @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  @@map("heights")
}

model Weight {
  id    String   @id @default(uuid())
  value Float    @db.DoublePrecision
  date  DateTime @default(now())

  User   User   @relation(fields: [userId], references: [id])
  userId String @map("user_id")

  @@map("weights")
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
